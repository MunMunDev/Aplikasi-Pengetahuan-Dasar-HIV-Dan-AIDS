<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.UpdateAkunActivity"
    android:id="@+id/drawerLayoutMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <View
                android:id="@+id/bgHeader"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/titleHeader"
                android:background="@drawable/bg_header_merah"/>

            <ImageView
                android:id="@+id/ivDrawerView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/baseline_dehaze_24_white"
                android:elevation="10dp"/>

            <TextView
                android:id="@+id/titleHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDrawerView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:text="Data Profile"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bgHeader"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_card_no_padding">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/bg_header_merah"
                    android:gravity="center"
                    android:text="Profile Anda"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Masukkan Nama"
                    android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:maxLength="30"
                    android:background="@drawable/bg_stroke_merah"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/etUmur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/etNama"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Masukkan Umur"
                    android:drawableStart="@drawable/baseline_access_time_24"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:enabled="false"
                    android:background="@drawable/bg_stroke_merah"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/etNama"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Masukkan Email"
                    android:drawableStart="@drawable/baseline_mail_24"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:maxLength="100"
                    android:enabled="false"
                    android:background="@drawable/bg_stroke_merah"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/etUmur"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Masukkan Username"
                    android:drawableStart="@drawable/baseline_person_outline_24"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:maxLength="30"
                    android:enabled="false"
                    android:background="@drawable/bg_stroke_merah"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/etUsername"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="Masukkan Password"
                    android:drawableStart="@drawable/baseline_lock_open_24"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:enabled="false"
                    android:background="@drawable/bg_stroke_merah"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/clProfile"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_card_no_padding">
                <Button
                    android:id="@+id/btnUbahData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/bg_btn_ubah_data"
                    android:text="Ubah Data"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_dokter"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>