<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TentangAplikasiActivity"
    android:id="@+id/drawerLayoutMain"
    android:backgroundTint="@color/abuabu_muda_sekali">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <View
                android:id="@+id/bgHeader"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/title"
                android:background="@drawable/bg_header_merah"/>

            <ImageView
                android:id="@+id/ivDrawerView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/baseline_dehaze_24_white"
                android:elevation="10dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDrawerView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:text="Tentang Aplikasi"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivGambarKonselor"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintTop_toBottomOf="@id/bgHeader"
                android:padding="2dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_card"
                android:src="@drawable/gambar_konselor"
                android:elevation="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clKonselor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivGambarKonselor"
                android:layout_marginTop="-70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="80dp"
                android:paddingBottom="14dp"
                android:background="@drawable/bg_card"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/tvNamaKonselor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center"
                    android:text="@string/nama_konselor"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/vPembatas"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaKonselor"
                    android:background="@color/abuabu_muda"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvTitleTTL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/vPembatas"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="TTL "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTitikDuaTTL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitleTTL"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleTTL"
                    app:layout_constraintEnd_toEndOf="@id/tvTitikDuaPekerjaan"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tvTTL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitikDuaTTL"
                    app:layout_constraintStart_toEndOf="@id/tvTitikDuaTTL"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="@string/ttl"/>

                <TextView
                    android:id="@+id/tvTitleAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvTTL"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Alamat "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTitikDuaAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitleAlamat"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleAlamat"
                    app:layout_constraintEnd_toEndOf="@id/tvTitikDuaPekerjaan"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tvAlamat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitikDuaAlamat"
                    app:layout_constraintStart_toEndOf="@id/tvTitikDuaAlamat"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="@string/alamat"/>

                <TextView
                    android:id="@+id/tvTitlePekerjaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvAlamat"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Pekerjaan "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTitikDuaPekerjaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitlePekerjaan"
                    app:layout_constraintStart_toEndOf="@id/tvTitlePekerjaan"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitlePekerjaan"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tvPekerjaan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitikDuaPekerjaan"
                    app:layout_constraintStart_toEndOf="@id/tvTitikDuaPekerjaan"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="@string/pekerjaan"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDataPengembang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/clKonselor"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="20dp"
                android:paddingBottom="14dp"
                android:background="@drawable/bg_card"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/tvTitleDataPengembang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center"
                    android:text="Biodata Pengembang"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/vPembatasDataPengembang"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitleDataPengembang"
                    android:background="@color/abuabu_muda"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvTitleNamaPengembang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/vPembatasDataPengembang"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Nama "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTitikDuaNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitleNamaPengembang"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleNamaPengembang"
                    app:layout_constraintEnd_toEndOf="@id/tvTitikDuaAlamatPengembang"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitikDuaNama"
                    app:layout_constraintStart_toEndOf="@id/tvTitikDuaNama"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="Muh. Rusli"/>

                <TextView
                    android:id="@+id/tvTitleNim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvNama"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="NIM "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTitikDuaNim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitleNim"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleNim"
                    app:layout_constraintEnd_toEndOf="@id/tvTitikDuaAlamatPengembang"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tvNim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitikDuaNim"
                    app:layout_constraintStart_toEndOf="@id/tvTitikDuaNim"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="218280045"/>

                <TextView
                    android:id="@+id/tvTitleAlamatPengembang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvNim"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Alamat "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvTitikDuaAlamatPengembang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitleAlamatPengembang"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitleAlamatPengembang"
                    app:layout_constraintStart_toEndOf="@id/tvTitleAlamatPengembang"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tvAlamatPengembang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTitikDuaAlamatPengembang"
                    app:layout_constraintStart_toEndOf="@id/tvTitikDuaAlamatPengembang"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="Labale, Enrekang"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSumberData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/clDataPengembang"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="20dp"
                android:paddingBottom="14dp"
                android:background="@drawable/bg_card"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/tvTitleSumberData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center"
                    android:text="@string/title_sumber_data"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/vPembatasSumberData"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitleSumberData"
                    android:background="@color/abuabu_muda"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvSumberData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/vPembatasSumberData"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/sumber_data"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:gravity="start"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/clSumberData"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="20dp"
                android:paddingBottom="14dp"
                android:background="@drawable/bg_card"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/tvTitleKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center"
                    android:text="@string/title_keterangan_tentang_aplikasi"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/vPembatasKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitleKeterangan"
                    android:background="@color/abuabu_muda"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/vPembatasKeterangan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/keterangan_tentang_aplikasi"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:lineSpacingExtra="2dp"
                    android:justificationMode="inter_word"
                    android:gravity="start"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_dokter"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
</androidx.drawerlayout.widget.DrawerLayout>