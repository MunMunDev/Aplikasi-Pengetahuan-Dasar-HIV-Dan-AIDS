    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llDontSendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_no_radius"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvTitleJamOperasional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tvInfoDontSendMessage"
            android:layout_marginBottom="2dp"
            android:text="Jam Operasional Jam 08.00 - 16.00 WITA"
            android:textSize="14sp"
            android:textColor="@color/abuabu_tua"
            android:textStyle="italic"
            android:gravity="center"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tvInfoDontSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="6dp"
            android:text="Tidak Dapat Mengirim Pesan."
            android:textSize="14sp"
            android:textColor="@color/abuabu_tua"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/btnInfoDontSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvInfoDontSendMessage"
            app:layout_constraintBottom_toBottomOf="@+id/tvInfoDontSendMessage"
            app:layout_constraintStart_toEndOf="@id/tvInfoDontSendMessage"
            android:layout_marginStart="4dp"
            android:text="Abaikan"
            android:textSize="14sp"
            android:textColor="@color/biru"
            android:textStyle="bold"
            android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxHeight="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSendMessage"
            android:background="@drawable/bg_et_chat">
            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:maxHeight="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivInfoSaranJamChat"
                android:layout_marginEnd="6dp"
                android:hint="Masukkan Pesan"
                android:background="@drawable/bg_isi_chat_no_radius"
                android:inputType="textMultiLine"
                android:maxLength="300"/>

            <ImageView
                android:id="@+id/ivInfoSaranJamChat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/baseline_photo_camera_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btnSendMessage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_send_24"
            android:background="@drawable/bg_send_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>