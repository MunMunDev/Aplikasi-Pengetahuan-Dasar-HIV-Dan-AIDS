    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_chat_sent">
        <ImageView
            android:id="@+id/ivMessageSentImage"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:maxWidth="260dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/icon_akun"/>
        <TextView
            android:id="@+id/tvWaktuSentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            app:layout_constraintTop_toBottomOf="@id/ivMessageSentImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:text="14 Jan 2025 - 10:00"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:textStyle="normal"/>
