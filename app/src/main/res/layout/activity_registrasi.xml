<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegistrasiActivity">
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/gambar_login"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:gravity="center"
        android:text="REGISTRASI"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etUmur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Umur"
        android:drawableStart="@drawable/baseline_access_time_24"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="16sp"
        android:inputType="number"
        android:maxLength="2"
        android:background="@drawable/bg_stroke_merah"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etUmur"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Email"
        android:drawableStart="@drawable/baseline_mail_24"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="16sp"
        android:inputType="textWebEmailAddress"
        android:maxLength="50"
        android:background="@drawable/bg_stroke_merah"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Username"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLength="30"
        android:background="@drawable/bg_stroke_merah"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Password"
        android:drawableStart="@drawable/baseline_lock_open_24"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:background="@drawable/bg_stroke_merah"/>

    <TextView
        android:id="@+id/titleKeterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Sudah Punya Akun? "
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toEndOf="@+id/titleKeterangan"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="@string/login"
        android:textColor="@color/biru"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnRegistrasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleKeterangan"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="REGISTRASI"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_merah"/>
</androidx.constraintlayout.widget.ConstraintLayout>